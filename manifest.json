{
  "manifest_version": 3,
  "name": "FlowMate - Image to Prompt",
  "version": "1.0.0",
  "description": "แปลงรูปภาพเป็น Prompt สำหรับ AI Image Generation",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "เปิด FlowMate"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "https://labs.google/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://labs.google/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ]
}
